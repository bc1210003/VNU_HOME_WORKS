    "a = b = n = 0\n",
    "print(answer)\n",
    "while a!=4:\n",
    "    a = b = n = 0\n",
    "    user = list(input('請輸入四00個數字：'))\n",
    "    for i in user:\n",
    "        if int(user[n]) == answer[n]:\n",
    "            a += 1\n",
    "        else:\n",
    "            if int(i) in answer:\n",
    "                b += 1\n",
    "        n += 1\n",
    "    output = ','.join(user).replace(',','')\n",
    "    print(f'{output}: {a}A{b}B')\n",
    "print(\"答對了！\")"
